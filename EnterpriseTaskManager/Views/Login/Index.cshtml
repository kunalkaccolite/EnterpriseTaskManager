@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div ng-app="TaskManager">
    <div ng-controller="LoginController">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                    <h1 class="text-center login-title">Sign in to continue to Task Manger</h1>
                    <div class="account-wall">
                        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                             alt="">
                        <form class="form-signin">
                            <input type="text" ng-model="Email" class="form-control" placeholder="UserName" required autofocus>
                            <input type="password" ng-model="Password" class="form-control" placeholder="Password" required>
                            <button class="btn btn-lg btn-primary btn-block" type="submit" ng-click="submit()">
                                Sign in
                            </button>
                            <label class="invalid-credentials" ng-show="InvalidCredentials">Please enter the correct credentials</label>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-0.13.4.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript" src="~/ClientScripts/app.js"></script>
    <script type="text/javascript" src="~/ClientScripts/LoginController.js"></script>
    <script type="text/javascript" src="~/ClientScripts/LoginService.js"></script>
    <script type="text/javascript" src="~/ClientScripts/EventService.js"></script>
}

@section Style{


    <style>
        .SelectedRow {
            background-color: aquamarine;
        }
    </style>
    <link rel="stylesheet" href="~/Content/Stylesheet/Login.css" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}