<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Enterprise Task Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  
</head>
<body>
     <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img class="nav navbar-nav navbar-left"  src="~/Content/Images/Sheridanlogo-small.png" style="position:inherit; "/>
                   @Html.ActionLink("Task Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-tabs">
                </ul>
                                <ul class="nav navbar-nav navbar-right" >
                    <li>@Html.ActionLink("Logout", "Index", "Login", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div >
             @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Style", required: false)



</body>
</html>
